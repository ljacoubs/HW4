<h1><%= @place["name"] %></h1>

<h2>My Posts</h2>
<% if @current_user %>
<div class="row">
  <% for post in @posts %>
      <div class="col-md-4 col-sm-12">
        <h4>
          <% user = User.find_by({ "id" => post["user_id"] }) %>
          <% if user %>
            <%= user["username"] %>
          <% else %>
            anonymous
          <% end %>
        </h4>
        <p><%= post["title"] %></p>
        <p><%= post["posted_on"] %></p>
        <% if post.uploaded_image.attached? %>
          <img src="<%= url_for(post.uploaded_image)%>" class="img-fluid">
        <% else %> 
          <img src="<%= post["image"] %>" class="img-fluid">
        <% end %>
        <p><%= post["description"] %></p>
      </div>
    
  <% end %>
</div>

  <div class ="mb-2">
    <a href="/posts/new?place_id=<%= @place["id"] %>" class="btn btn-success">New Post</a>
  </div>
<% else %> 
  <p>Please Login</p>
<%end%>
  
        <div class ="mt-2">
  <a href="/places" class= "btn btn-success">Back to All Places</a>
  </div>
</div>

