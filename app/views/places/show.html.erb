<h1><%= @place["name"] %></h1>

<h2>My Posts</h2>
<div class="row">
  <% for post in @posts %>
  

  
      <div class="col-md-4 col-sm-12">
        <h4>
          <% user = User.find_by({ "id" => post["user_id"] }) %>
          <% if user %>
            <%= user["first_name"] %>
          <% else %>
            anonymous
          <% end %>
        </h4>
        <p><%= post["title"] %></p>
        <p><%= post["posted_on"] %></p>
        <p><%= post["image"] %></p> <img src="<%= post["image"] %>" class="img-fluid">
        <p><%= post["description"] %></p>
      </div>
    
  <% end %>
</div>

   <div>
        <a href="/posts/new?place_id=<%= @place["id"] %>" class="btn btn-success">New Post</a>
      </div>
  
        <div class ="mt-2">
  <a href="/places" class= "btn btn-success">Back to All Places</a>
  </div>
</div>

